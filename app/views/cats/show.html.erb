<table>
    <thead>
        <tr>
            <th colspan="4"><%= @cat.name %></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>age</td>
            <td>birth date</td>
            <td>color</td>
            <td>sex</td>
            <td>description</td>
        </tr>
        <tr>
            <td><%= @cat.age %></td>
            <td><%= @cat.birth_date %></td>
            <td><%= @cat.color %></td>
            <td><%= @cat.sex %></td>
            <td><%= @cat.description %></td>
        </tr>
    </tbody>
</table>

<h3>Rental Requests for <%= @cat.name %></h2>
<ol>
    <% @rental_requests.each do |request| %>
    <li>Start Date: <%= request.start_date %> End Date: <%= request.end_date %></li>
        <% if request.status == 'PENDING' %>
            <%= button_to "Approve", approve_cat_rental_request_url %>
            <%= button_to "Deny", deny_cat_rental_request_url %>
        <% end %>
    <% end %>
</ol>